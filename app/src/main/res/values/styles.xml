<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Splash的全屏白色主题-->
    <style name="SplashPageTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <!--AS创建全屏Activity时创建的主题-->
    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
    <!--AS创建全屏Activity时创建的主题-->

    <!--自定义Dialog的动画-->
    <style name="pop_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>

    </style>

    <!--自定义Dialog的主题-->
    <style name="dialog_custom" parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <!--主界面标签按钮样式-->
    <style name="RadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <!--颜色又是一个选择器-->
        <item name="android:textColor">@drawable/main_radio_button_selector</item>
        <item name="android:textSize">20sp</item>

        <!--<item name="android:scaleType">centerInside</item>-->

        <!--这个选项不是将图片资源放在上方,而是listview的属性-->
        <!--<item name="android:drawSelectorOnTop">true</item>-->
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MaterialBottomNavBottonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>

        <!--<item name="android:paddingTop">@dimen/material_bottom_nav_bar_shifting_action_active_icon_padding_top</item>-->
        <!--<item name="android:paddingBottom">@dimen/material_bottom_nav_bar_action_label_padding_bottom</item>-->
        <item name="android:textSize">
            @dimen/material_bottom_nav_bar_fixed_action_active_label_text_size
        </item>
        <item name="android:textColor">@drawable/main_radio_button_selector</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>


    </style>
</resources>
