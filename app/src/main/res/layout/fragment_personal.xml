<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="@dimen/card_margin"
                android:background="@drawable/bg_button_round_large"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fragment_personal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    tools:text="头像,账号,签名,顶栏图" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="@dimen/card_margin">

                <GridLayout
                    android:id="@+id/gl_functions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="1"
                    android:rowCount="4">

                    <Button
                        android:id="@+id/btn_personal_my_solution"
                        android:layout_rowWeight="0"
                        android:layout_columnWeight="1"
                        android:drawableLeft="@drawable/ic_baseline_format_list_bulleted_24"
                        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                        android:gravity="left|center_vertical"
                        android:text="我的倒班" />

                    <Button
                        android:id="@+id/btn_personal_upload"
                        android:layout_rowWeight="0"
                        android:layout_columnWeight="1"
                        android:drawableLeft="@drawable/ic_baseline_cloud_upload_24"
                        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                        android:gravity="left|center_vertical"
                        android:text="我的共享" />
                    <Button
                        android:layout_rowWeight="0"
                        android:layout_columnWeight="1"
                        android:drawableLeft="@drawable/ic_baseline_bar_chart_24"
                        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                        android:gravity="left|center_vertical"
                        android:text="统计数据" />


                    <Button
                        android:layout_rowWeight="0"
                        android:layout_columnWeight="1"
                        android:drawableLeft="@drawable/ic_settings_black_24dp"
                        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                        android:gravity="left|center_vertical"
                        android:text="设置" />
                </GridLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
