<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="64dp"
    android:background="@drawable/bg_bs_number_picker"
    android:paddingLeft="2dp"
    android:paddingRight="2dp">

    <Button
        android:id="@+id/btn_dec"
        style="@null"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_toEndOf="@id/tv_number"
        android:background="@drawable/ic_indeterminate_check_box_black_24dp"
        />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:textSize="@dimen/font_title"
        tools:text="0" />

    <Button
        android:id="@+id/btn_inc"
        style="@null"
        android:layout_toStartOf="@id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_add_box_black_24dp" />
</RelativeLayout>