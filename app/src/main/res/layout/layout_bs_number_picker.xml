<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bs_number_picker"
    android:paddingLeft="2dp"
    android:paddingRight="2dp">


    <Button
        android:id="@+id/btn_dec"
        style="@null"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_indeterminate_check_box_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_number"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="@dimen/font_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_dec"
        app:layout_constraintRight_toLeftOf="@id/btn_inc"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0" />

    <Button
        android:id="@+id/btn_inc"
        style="@null"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_add_box_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>